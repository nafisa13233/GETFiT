@model GETFiT.Areas.Trainer.Models.TrainerLoginViewModel
@{
    ViewBag.Title = "Trainer Login";
}




<div class="row justify-content-center">
    <div class="form-horizontal col-sm-12 col-md-8 col-lg-6  d-flex flex-column justify-content-center align-items-center">
        <p class="display-3"><i class="fas fa-user-circle"></i></p>
        <h2 class="heading-h-1">@ViewBag.Title</h2>
        @using (Html.BeginForm("Login", "TrainerAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal col-8", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
            <div class="form-group mt-4">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Log in" class="btn btn-info-3" />
                </div>
            </div>

        }

    </div>

</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

