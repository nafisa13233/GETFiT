@model GETFiT.Areas.Admin.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container mt-2">

    <h2 class="heading-h-1 text-center">GETFiT Statistics</h2>

    <div class="row">
        <div class="col-4 ">
            <div class=" stats-card-body p-3">
                <h4>Number of Trainers : </h4>
                <p>@Model.numberOfTrainers</p>
                @Html.ActionLink("Trainers List","Trainers","Home", new { area="Admin"}, new { @class="btn btn-block btn-dark"})

            </div>
        </div>

        <div class="col-4">
            <div class=" stats-card-body p-3">
                <h4>Number of Clients : </h4>
                <p>@Model.numberOfClients</p>
                @Html.ActionLink("Clients List", "Clients", "Home", new { area = "Admin" }, new { @class = "btn btn-block btn-dark" })

            </div>

        </div>

        <div class="col-4 ">

            <div class=" stats-card-body p-3">
                <h4>Number of Appointments : </h4>
                <p>@Model.numberOfAppointments</p>
                @Html.ActionLink("Appointments List", "Appointments", "Home", new { area = "Admin" }, new { @class = "btn btn-block btn-dark" })
            </div>

        </div>
    </div>


</div>
