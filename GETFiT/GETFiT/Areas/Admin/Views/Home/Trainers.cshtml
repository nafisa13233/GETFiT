@using PagedList.Mvc;
@using PagedList;

@model IPagedList<GETFiT.Models.Trainer>
@{
    ViewBag.Title = "Trainers";
}

<div class="container">

    <div class="row mt-3">

        @using (Html.BeginForm("Trainers", "Home", FormMethod.Get, new { @class = "col-12 form-row" }))
        {
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="search-skill form-control search-field" name="search" id="Name" placeholder="Trainer Name, Speciality, Email, Area..">
                </div>

            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary search-btn-1" value="SearchBy"><i class="fas fa-search "></i> Search</button>
            </div>

            <div class="col-md-3 mt-3 mt-md-0 mt-sm-4 col-sm-12">

                <a href="@Url.Action("TrainerRegister","AdminAccount")" class="btn btn-block btn-outline-primary"><i class="fas fa-user-plus"></i> Add Trainer</a>

            </div>
        }



    </div>    


    <div class="row">

        @foreach (var trainer in Model)
        {
            <div class="col-md-6 col-sm-12 mt-3">
                <div class="stats-card-body">
                    <div class="row ">


                        <div class="col-6 col-md-12 col-lg-6">
                            <div class="admin-doctor-img-wrapper">

                                <img class="admin-doctor-img" src="@trainer.ImageFilePath" />

                            </div>
                        </div>

                        <div class="col-6 col-md-12 col-lg-6 admin-doctor-card-right">

                            <div class="col-12 admin-doctor-info">
                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> Name  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class="">@trainer.User.Name </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> Email  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class="">@trainer.User.Email </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> Address  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class=""> @trainer.Address </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> Qualification  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class="">@trainer.Qualification </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> Speciality  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class="">@trainer.Speciality </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <label class="control-label"> No. Of Appoinments  </label>
                                    </div>
                                    <div class="col-12">
                                        <label class="">@trainer.appointments.Count() </label>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <a href="@Url.Action("Appointments","Home", new { id = trainer.User.trainer.Id, q="Trainer"})" class="btn btn-block btn-outline-success"> <i class="fas fa-edit"></i> Appointments</a>
                                    <a href="@Url.Action("EditTrainerAccount","Home", new { id = trainer.User.Id})" class="btn btn-block btn-outline-primary"> <i class="fas fa-edit"></i> Edit Profile</a>
                                    @*<a href="@Url.Action("Remove","Home", new { id = trainer.User.Id})" class="btn btn-block btn-outline-danger"><i class="fas fa-minus-circle"></i> Remove Trainer</a>*@
                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        }

        <div class="col-12">
            <nav aria-label="...">

                <ul class="pagination mt-3">

                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Trainers", new { page = Model.PageNumber-1 , search = Request.QueryString["search"]})">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="@Url.Action("Trainers", new { page = Model.PageNumber-1 , search = Request.QueryString["search"]})">Previous</a>
                        </li>
                    }


                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <li class="@(i == Model.PageNumber ? "page-item active" : "page-item")">
                            <a class="page-link" href="@Url.Action("Trainers", new { page = i , search = Request.QueryString["search"]})">@i</a>
                        </li>

                    }

                    @if (Model.PageNumber < Model.PageCount)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Trainers", new { page = Model.PageNumber+1 , search = Request.QueryString["search"]})">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <a class="page-link" href="@Url.Action("Trainers", new { page = Model.PageNumber+1 , search = Request.QueryString["search"]})">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>



    </div>

</div>

